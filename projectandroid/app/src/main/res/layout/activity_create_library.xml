<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateLibraryActivity"
        android:background="@color/light_pink">


<EditText
            android:id="@+id/libraryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Library Name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"/>

    <EditText
            android:id="@+id/libraryAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            app:layout_constraintTop_toBottomOf="@id/libraryName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/libraryOpenDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Open Days (e.g., Mon-Fri)"
            app:layout_constraintTop_toBottomOf="@id/libraryAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/libraryOpenTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Open Time (e.g., 09:00)"
            app:layout_constraintTop_toBottomOf="@id/libraryOpenDays"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/libraryCloseTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Close Time (e.g., 18:00)"
            app:layout_constraintTop_toBottomOf="@id/libraryOpenTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/createLibraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:text="Create Library"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/libraryCloseTime" />

</androidx.constraintlayout.widget.ConstraintLayout>