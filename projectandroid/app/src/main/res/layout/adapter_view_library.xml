<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">

    <TextView
            android:id="@+id/libraryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:clickable="true"
            android:focusable="true" />

    <TextView
            android:id="@+id/libraryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library Address"
            android:textSize="14sp"
            android:paddingBottom="2dp" />

    <TextView
            android:id="@+id/libraryOpenDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Days"
            android:textSize="14sp"
            android:paddingBottom="2dp" />
    <TextView
            android:id="@+id/libraryOpenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Time"
            android:textSize="14sp"
            android:paddingBottom="2dp" />
    <TextView
            android:id="@+id/libraryCloseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Time"
            android:textSize="14sp" />

    <Button
            android:id="@+id/updateLibraryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Update"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

    <Button
            android:id="@+id/deleteLibraryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Delete"
            android:textColor="#000000"
            android:backgroundTint="#FF0000"/>

</LinearLayout>